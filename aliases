#elasticbeanstalk
function ebz
{
  zip -r $(git rev-parse "HEAD").zip . -x "node_modules/*" -x ".git/*" -x ".sass-cache/*" 
  echo \n\ncreated $(git rev-parse "HEAD").zip
}

